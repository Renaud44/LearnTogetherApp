<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginHorizontal="12dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="10dp"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/nom_groupe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom du groupe"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/matiere_groupe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MatiÃ¨re"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/dark_gray"/>

        <TextView
            android:id="@+id/description_groupe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/dark_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/btn_voir"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Voir"
                android:layout_marginEnd="2dp"
                android:backgroundTint="@color/colorPrimary" />

            <Button
                android:id="@+id/btn_membres"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Membres"
                android:backgroundTint="@color/colorPrimaryDark" />

            <Button
                android:id="@+id/btn_supprimer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="2dp"
                android:text="Supprimer"

                android:backgroundTint="@android:color/holo_red_dark" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
